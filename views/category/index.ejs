<% layout('layouts/boilerplate') %>
<div class="container-scroller">
  <%- include('../partials/_navbar') %>
  <div class="container-fluid page-body-wrapper">
    <%- include('../partials/_settings-panel') %> <%-
    include('../partials/_sidebar') %>
    <div class="main-panel">
      <div class="content-wrapper">
        <div class="row">
          <div class="col-lg-10 grid-margin stretch-card">
            <div class="card">
              <div class="card-body">
                <div class="row">
                  <div class="col-md-6">
                    <h4 class="card-title">Daftar Kriteria</h4>
                  </div>
                  <div class="col-md-6 text-right">
                    <p class="card-description">
                      Jumlah Kriteria: <%= category.length %>
                    </p>
                  </div>
                </div>
                <div>
                  <button
                    type="button"
                    class="btn btn-primary btn-sm"
                    data-toggle="modal"
                    data-target="#addPegawaiModal"
                    onclick="window.location.href='/category/new'"
                  >
                    Add Kriteria
                  </button>
                </div>
                <div class="table-responsive">
                  <table class="table">
                    <thead>
                      <tr>
                        <th>Nama</th>
                        <th>Tipe</th>
                        <th>Bobot</th>
                        <th>Action</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% category.forEach((category) => { %>
                      <tr>
                        <td><%= category.name %></td>
                        <% if (category.categoryType == 1 ) { %>
                          <td>Benefit</td>
                        <% } else { %>
                          <td>Cost</td>
                        <% }%>
                        <td><%= category.weight %></td>
                        <td>
                          <div class="d-flex">
                            <button
                              class="btn badge badge-dark mx-1"
                              type="submit"
                              onclick="window.location.href='/category/<%= category._id %>';"
                            >
                              <span class="badge-dark font-weight-bold">
                                <i data-feather="detail"></i> Detail
                              </span>
                            </button>

                            <button
                              class="btn badge badge-warning mx-1 edit-pegawai"
                              type="button"
                              data-toggle="modal"
                              data-target="#editPegawaiModal"
                              data-id="<%= category._id %>"
                            >
                              <span class="badge-warning font-weight-bold">
                                <i data-feather="edit"></i> Edit
                              </span>
                            </button>

                              <!-- <div>
                                <button class="btn badge badge-danger font-weight-bold" type="button" data-toggle="modal" data-target="#deleteModal<%= category._id %>">
                                    <i data-feather="trash-2"></i> Delete
                                </button>
                              </div> -->
                              <div>
                                <button class="btn badge badge-secondary font-weight-bold" type="button">
                                    <i data-feather="trash-2"></i> Used
                                </button>
                              </div>

                            <!-- Modal Delete -->
                            <div class="modal fade" id="deleteModal<%= category._id %>" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel" aria-hidden="true">
                                <div class="modal-dialog" role="document">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="deleteModalLabel">Konfirmasi Penghapusan</h5>
                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                <span aria-hidden="true">&times;</span>
                                            </button>
                                        </div>
                                        <div class="modal-body">
                                            Apakah Anda yakin ingin menghapus data kriteria ini?
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                                            <form action="/pegawai/delete/<%= category._id %>?_method=DELETE" method="POST">
                                                <button type="submit" class="btn btn-danger">Delete</button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                          </div>
                        </td>
                      </tr>
                      <% }) %>
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <!-- content-wrapper ends -->
      <!-- partial:../../partials/_footer.html -->
      <%- include('../partials/_footer') %>
      <!-- partial -->
    </div>
  </div>
</div>
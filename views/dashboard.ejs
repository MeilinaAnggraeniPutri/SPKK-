<% layout('layouts/boilerplate') %>
<div class="container-scroller">
  <!-- partial:partials/_navbar.html -->
  <%- include('./partials/_navbar') %>
  <!-- partial -->
  <div class="container-fluid page-body-wrapper">
    <!-- partial:partials/_settings-panel.html -->
    <%- include('./partials/_settings-panel') %>
    <!-- partial:partials/_sidebar.html -->
    <%- include('./partials/_sidebar') %>
    <!-- partial -->
    <div class="main-panel">
      <div class="content-wrapper">
        <div class="row">
          <div class="col-md-12 grid-margin">
            <div class="row">
              <div class="col-12 col-xl-8 mb-4 mb-xl-0">
                <h3 class="font-weight-bold">Welcome <%= username%></h3>
              </div>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-md-6 grid-margin stretch-card">
            <div class="card tale-bg">
              <div class="card-people mt-auto">
                <img src="images/dashboard/people.svg" alt="people" />
              </div>
            </div>
          </div>
          <div class="col-md-6 grid-margin transparent">
            <div class="row">
              <div class="col-md-6 mb-4 p-100 stretch-card transparent">
                <a href="/penilaian" style="text-decoration: none; color: inherit;">
                  <div class="card card-tale px-5">
                    <div class="card-body">
                      <p class="mb-4">Penilaian</p>
                      <p class="fs-30 mb-2"><%= totalPenilaian %></p>
                    </div>
                  </div>
                </a>
              </div>
              <div class="col-md-6 mb-4 stretch-card transparent">
                <a href="/pegawai" style="text-decoration: none; color: inherit;">
                  <div class="card card-dark-blue px-5">
                    <div class="card-body">
                      <p class="mb-4">Pegawai</p>
                      <p class="fs-30 mb-2"><%= totalPegawai %></p>
                    </div>
                  </div>
                </a>
              </div>
            </div>
            <div class="row">
              <div class="col-md-6 mb-4 mb-lg-0 stretch-card transparent">
                <a href="/jabatan" style="text-decoration: none; color: inherit;">
                  <div class="card card-light-blue px-5">
                    <div class="card-body">
                      <p class="mb-4">Jabatan</p>
                      <p class="fs-30 mb-2"><%= totalJabatan %></p>
                    </div>
                  </div>
                </a>
              </div>
              <div class="col-md-6 stretch-card transparent">
                <a href="/category" style="text-decoration: none; color: inherit;">
                  <div class="card card-light-danger px-5">
                    <div class="card-body">
                      <p class="mb-4">Kategori</p>
                      <p class="fs-30 mb-2"><%= totalKategori %></p>
                    </div>
                  </div>
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
      <!-- content-wrapper ends -->
      <!-- partial:partials/_footer.html -->
      <%- include('./partials/_footer') %>
      <!-- partial -->
    </div>
    <!-- main-panel ends -->
  </div>
  <!-- page-body-wrapper ends -->
</div>
<!-- container-scroller -->
